<%= form_for(@bento) do |f| %>

    <p>
    <%= f.label :name%>
    <%= f.text_field :name%>
    </p>

    <p>
    <%= f.label :bento_type%>
    <%= f.text_field :bento_type%>
    </p>

    <p>
        <%= f.collection_check_boxes :menu_item_ids, MenuItem.all, :id, :name do |check_box| %>
            <%= check_box.label(class: "check_box") do %>
            <%= check_box.check_box(class: "check_box") %>
            <%= check_box.object.name %></br>
            <% end %>
        <% end %>
    </p>

    <%= f.submit %>
<% end %>